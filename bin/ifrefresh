#!/bin/bash

set -e
set -u
set -x

while [[ 1 ]] ; do
    ip=$(curl --silent ifconfig.me)
    storedip=$(cat ~/.storedip)
    if [[ $ip != $storedip ]]; then
        #echo $ip | msmtp -a marmalodak 6502749373@mms.att.net
        echo $ip | msmtp -a marmalodak marmalodak@gmail.com
        echo $ip > ~/.storedip
    fi
    sleep 3600
done
